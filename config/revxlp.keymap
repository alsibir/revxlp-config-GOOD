/* Краткое описание конфигурации:
 * - Слои: BASE_L (Base), NAV_L (Nav), NUM_L (Num), MED_L (Adjust, tri-layer), FUN_L (Media), MOU_L (Mouse), reserved_layer (отключён).
 * - Tri-layer: MED_L активируется при одновременной активности NUM_L и NAV_L.
 * - Combos: для слой-ограниченных combos ввода символов (NUM_L) не применяется require-prior-idle-ms; для глобальных combos применяется require-prior-idle-ms; для опасных действий применяется усиленная защита.
 * - Tap-dance: shifty (одиночное нажатие — Shift, двойное — caps_word).
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

/* Примечание: использование &mmv/&msc/&mkp требует включения поддержки pointing (например, CONFIG_ZMK_POINTING=y).
 * Примечание: включение/отключение pointing изменяет HID-описатель; для BLE может потребоваться обновление HID-описателя на стороне хоста.
 * Примечание: рекомендуется продублировать данные требования в README (раздел Pointing/Mouse) с описанием действий на стороне хоста при обновлении HID.
 *
 * Примечание по настройке чувствительности (при необходимости):
 * Перед включением заголовка допускается переопределить значения по умолчанию, например:
 *   #define ZMK_POINTING_DEFAULT_MOVE_VAL 1500
 *   #define ZMK_POINTING_DEFAULT_SCRL_VAL 20
 */
#include <dt-bindings/zmk/pointing.h>

// -----------------------------------------------------------------------------
// Definitions
// -----------------------------------------------------------------------------

/* Индексы слоёв соответствуют порядку узлов внутри keymap (первый слой имеет индекс 0).
 * Инвариант: при добавлении/удалении/перестановке слоёв в keymap требуется актуализировать значения ниже.
 *
 * BASE_L (0): Base
 * NAV_L  (1): Nav
 * NUM_L  (2): Num
 * MED_L  (3): Adjust
 * FUN_L  (4): Media
 * MOU_L  (5): Mouse
 */
#define BASE_L 0
#define NAV_L 1
#define NUM_L 2
#define MED_L 3
#define FUN_L 4
#define MOU_L 5

/* Унифицированные константы настройки combos */
#define COMBO_TIMEOUT_MS 120
#define COMBO_TIMEOUT_COMMAND_MS COMBO_TIMEOUT_MS
#define COMBO_IDLE_SYMBOL_MS 150
#define COMBO_IDLE_COMMAND_MS 150
#define COMBO_IDLE_DANGER_MS 250

/* Унифицированные константы для tap-dance */
#define TAP_DANCE_TERM_MS 150

/ {
    // -------------------------------------------------------------------------
    // Tap dances
    // -------------------------------------------------------------------------
    tap_dances {
        // Нажатие: одиночное нажатие (tap) в пределах 150 мс — выполняется LSHFT; двойное нажатие (double-tap) в пределах 150 мс — включается режим caps_word.
        // Результат: при tap действует как левый Shift, при double-tap включается Caps Word (заглавные буквы до условия завершения режима).
        // Ограничения: применяется только там, где поведение shifty назначено в keymap; окно распознавания задаётся tapping-term-ms.
        // Настройка: при пропусках double-tap рекомендуется увеличить tapping-term-ms (например, до 180–220 мс); при ложных double-tap — уменьшать шагом 10–20 мс.
        shifty: shift_caps_word {
            compatible = "zmk,behavior-tap-dance";
            display-name = "Shift+";
            #binding-cells = <0>;
            tapping-term-ms = <TAP_DANCE_TERM_MS>;
            bindings = <&kp LSHFT>, <&caps_word>;
        };
    };

    // -------------------------------------------------------------------------
    // Conditional layers (tri-layer)
    // -------------------------------------------------------------------------
    cond_layers {
        compatible = "zmk,conditional-layers";

        // Условие: одновременная активность слоёв NUM_L и NAV_L.
        // Результат: автоматически активируется слой MED_L (tri-layer), пока выполняется условие.
        // Ограничения: MED_L является производным (условным) слоем; прекращает быть активным при выключении любого из слоёв NUM_L или NAV_L.
        // Диагностика: при нестабильном включении MED_L требуется проверить, что NUM_L и NAV_L реально удерживаются как активные слои (а не срабатывают как tap), и при необходимости унифицировать механику удержания (например, &mo для обоих слоёв).
        tri {
            if-layers = <NUM_L NAV_L>;
            then-layer = <MED_L>;
        };
    };

    // -------------------------------------------------------------------------
    // Combos
    // -------------------------------------------------------------------------
    combos {
        compatible = "zmk,combos";

        // Принцип настройки:
        // - для слой-ограниченных combos ввода символов (например, NUM_L) обычно не применяется require-prior-idle-ms, чтобы не ухудшать потоковый ввод;
        // - для глобальных combos (без layers) применяется require-prior-idle-ms как защита от ложных срабатываний;
        // - для опасных действий (например, &bootloader) применяется усиленная защита (COMBO_IDLE_DANGER_MS).
        // Примечание: require-prior-idle-ms блокирует combo при активном наборе без паузы; в этом случае отправляются обычные нажатия.
        // Примечание: пересечения combos по key-positions рекомендуется вводить только при явном обосновании и с обязательной проверкой приоритетов.

        // Нажатие: одновременное W + S (позиции 2 и 14) в пределах 120 мс.
        // Результат: символ "{" (Shift + [).
        // Ограничения: работает только при активном слое NUM_L; при активных NUM_L и NAV_L одновременно дополнительно активируется MED_L, однако combo остаётся привязанной к NUM_L.
        l_curly_bracket {
            timeout-ms = <COMBO_TIMEOUT_MS>;
            key-positions = <2 14>;
            bindings = <&kp LS(LBKT)>;
            layers = <NUM_L>;
        };

        // Нажатие: одновременное R + F (позиции 4 и 16) в пределах 120 мс.
        // Результат: символ "}" (Shift + ]).
        // Ограничения: работает только при активном слое NUM_L; при активных NUM_L и NAV_L одновременно дополнительно активируется MED_L, однако combo остаётся привязанной к NUM_L.
        r_curly_bracket {
            timeout-ms = <COMBO_TIMEOUT_MS>;
            key-positions = <4 16>;
            bindings = <&kp LS(RBKT)>;
            layers = <NUM_L>;
        };

        // Нажатие: одновременное S + X (позиции 14 и 26) в пределах 120 мс.
        // Результат: символ "[".
        // Ограничения: работает только при активном слое NUM_L; при активных NUM_L и NAV_L одновременно дополнительно активируется MED_L, однако combo остаётся привязанной к NUM_L.
        lbracket {
            timeout-ms = <COMBO_TIMEOUT_MS>;
            key-positions = <14 26>;
            bindings = <&kp LBKT>;
            layers = <NUM_L>;
        };

        // Нажатие: одновременное F + V (позиции 16 и 28) в пределах 120 мс.
        // Результат: символ "]".
        // Ограничения: работает только при активном слое NUM_L; при активных NUM_L и NAV_L одновременно дополнительно активируется MED_L, однако combo остаётся привязанной к NUM_L.
        rbracket {
            timeout-ms = <COMBO_TIMEOUT_MS>;
            key-positions = <16 28>;
            bindings = <&kp RBKT>;
            layers = <NUM_L>;
        };

        // Нажатие: одновременное L + DOT (позиции 21 и 33) в пределах 120 мс.
        // Результат: символ "?" (Shift + /).
        // Ограничения: глобальная combo; дополнительно требуется простой ввода не менее 150 мс перед началом combo (защита от ложных срабатываний при скоростном наборе).
        ques_mark_combo {
            timeout-ms = <COMBO_TIMEOUT_MS>;
            require-prior-idle-ms = <COMBO_IDLE_SYMBOL_MS>; // Защита от ложных срабатываний: combo блокируется, если перед началом в последние 150 мс выполнялся обычный ввод.
            key-positions = <21 33>;
            bindings = <&kp LS(FSLH)>;
        };

        // Нажатие: одновременное P + SEMI (позиции 10 и 22) в пределах 120 мс.
        // Результат: символ "\".
        // Ограничения: глобальная combo; дополнительно требуется простой ввода не менее 150 мс перед началом combo (защита от ложных срабатываний при скоростном наборе).
        bslash_combo {
            timeout-ms = <COMBO_TIMEOUT_MS>;
            require-prior-idle-ms = <COMBO_IDLE_SYMBOL_MS>; // Защита от ложных срабатываний: combo блокируется, если перед началом в последние 150 мс выполнялся обычный ввод.
            key-positions = <10 22>;
            bindings = <&kp BSLH>;
        };

        // Нажатие: одновременное SEMI + FSLH (позиции 22 и 34) в пределах 120 мс.
        // Результат: символ "/".
        // Ограничения: глобальная combo; дополнительно требуется простой ввода не менее 150 мс перед началом combo (защита от ложных срабатываний при скоростном наборе).
        fslash_combo {
            timeout-ms = <COMBO_TIMEOUT_MS>;
            require-prior-idle-ms = <COMBO_IDLE_SYMBOL_MS>; // Защита от ложных срабатываний: combo блокируется, если перед началом в последние 150 мс выполнялся обычный ввод.
            key-positions = <22 34>;
            bindings = <&kp FSLH>;
        };

        // Нажатие: одновременное T + Y (позиции 5 и 6) в пределах 120 мс.
        // Результат: переход в режим загрузчика (&bootloader).
        // Ограничения: работает только при активном слое MED_L; дополнительно требуется простой ввода не менее 250 мс перед началом combo (усиленная защита от случайного срабатывания).
        bootloader_combo {
            timeout-ms = <COMBO_TIMEOUT_COMMAND_MS>;
            require-prior-idle-ms = <COMBO_IDLE_DANGER_MS>; // Усиленная защита: действие загрузчика блокируется при отсутствии простоя 250 мс перед началом combo.
            // slow-release; // При необходимости усиления стабильности удерживаемых combos (как правило, для &bootloader не требуется).
            key-positions = <5 6>;
            bindings = <&bootloader>;
            layers = <MED_L>;
        };

        // Нажатие: одновременное F + J (позиции 16 и 19) в пределах 120 мс.
        // Результат: нажатие модификатора GUI/Windows/Command (LGUI).
        // Ограничения: работает только при активном слое MED_L; дополнительно требуется простой ввода не менее 150 мс перед началом combo (защита от ложных срабатываний при скоростном наборе).
        gui_combo {
            timeout-ms = <COMBO_TIMEOUT_COMMAND_MS>;
            require-prior-idle-ms = <COMBO_IDLE_COMMAND_MS>; // Защита от ложных срабатываний: модификатор GUI блокируется при отсутствии простоя 150 мс перед началом combo.
            key-positions = <16 19>;
            bindings = <&kp LGUI>;
            layers = <MED_L>;
        };
    };

    // Для генерации прошивки с раскладкой Colemak закомментировать следующую строку (#define QWERTY_BASE); при активной директиве будет генерироваться раскладка Qwerty.
    #define QWERTY_BASE

    // -------------------------------------------------------------------------
    // Custom behaviors (reserved)
    // -------------------------------------------------------------------------
    behaviors {
        // Резерв для пользовательских behaviors (при необходимости расширения конфигурации).
    };

    // -------------------------------------------------------------------------
    // Keymap
    // -------------------------------------------------------------------------
    keymap {
        compatible = "zmk,keymap";

        // Примечание: при расширении слоёв рекомендуется выполнять аудит &trans в критичных позициях, чтобы исключить непреднамеренное наследование базовых действий на служебных слоях.

        // index: BASE_L (0) — Base (вариант определяется через QWERTY_BASE)
        #ifdef QWERTY_BASE

        qwerty_layer {
            display-name = "Base";
            bindings = <
&kp ESC        &kp Q  &kp W  &kp E  &kp R           &kp T                                  &kp Y     &kp U    &kp I      &kp O    &kp P     &kp BSLH
&mt LCTRL TAB  &kp A  &kp S  &kp D  &kp F           &kp G                                  &kp H     &kp J    &kp K      &kp L    &kp SEMI  &kp SQT
&kp LSHFT      &kp Z  &kp X  &kp C  &kp V           &kp B                                  &kp N     &kp M    &kp COMMA  &kp DOT  &kp FSLH  &mt RALT GRAVE
                                    &lt MOU_L LGUI  &mo NUM_L  &lt NAV_L RET    &kp SPACE  &kp BSPC  &shifty
            >;
        };

        #else

        colemak_dhm_layer {
            display-name = "Base";
            bindings = <
&kp ESC        &kp Q  &kp W  &kp F  &kp P           &kp B                                  &kp J     &kp L    &kp U      &kp Y    &kp SQT   &kp BSLH
&mt LCTRL TAB  &kp A  &kp R  &kp S  &kp T           &kp G                                  &kp M     &kp N    &kp E      &kp I    &kp O     &kp SEMI
&kp LSHFT      &kp Z  &kp X  &kp C  &kp D           &kp V                                  &kp K     &kp H    &kp COMMA  &kp DOT  &kp FSLH  &mt RALT GRAVE
                                    &lt MOU_L LGUI  &mo NUM_L  &lt NAV_L RET    &kp SPACE  &kp BSPC  &shifty
            >;
        };

        #endif

        // index: NAV_L (1)
        nav_layer {
            display-name = "Nav";
            bindings = <
&kp LG(LS(N4))  &trans  &kp PG_UP       &kp UP_ARROW    &kp PG_DN           &kp HOME                               &kp CARET           &kp PG_UP            &kp UP_ARROW    &kp PG_DN        &kp HOME  &kp LG(LS(N4))
&trans          &trans  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW     &kp END                                &kp MINUS           &kp LEFT_ARROW       &kp DOWN_ARROW  &kp RIGHT_ARROW  &kp END   &trans
&out OUT_TOG    &trans  &trans          &trans          &kp LC(LEFT_ARROW)  &kp LC(RIGHT_ARROW)                    &kp LC(LEFT_ARROW)  &kp LC(RIGHT_ARROW)  &trans          &trans           &trans    &out OUT_TOG
                                        &lt MOU_L LGUI  &mo NUM_L           &trans                                 &trans              &trans               &mo MED_L
            >;
        };

        // index: NUM_L (2)
        num_layer {
            display-name = "Num";
            bindings = <
&kp ESC    &kp N1    &kp N2       &kp N3        &kp N4          &kp N5                                 &kp N6     &kp N7     &kp N8           &kp N9     &kp N0    &kp GRAVE
&trans     &kp EXCL  &kp AT       &kp HASH      &kp DLLR        &kp PRCNT                              &kp CARET  &kp AMPS   &kp KP_MULTIPLY  &kp LPAR   &kp RPAR  &kp COLON
&kp LSHFT  &kp N1    &kp KP_PLUS  &kp KP_MINUS  &kp LBRC        &kp LBKT                               &kp RBKT   &kp RBRC   &kp KP_EQUAL     &kp UNDER  &trans    &trans
                                                &lt MOU_L LGUI  &trans     &lt NAV_L RET    &kp KP_N1  &kp KP_N2  &mo MED_L
            >;
        };

        // index: MED_L (3)
        adjust_layer {
            display-name = "Adjust";
            bindings = <
&sys_reset  &trans        &trans        &trans        &trans        &trans                             &kp C_VOL_UP  &trans  &trans  &trans  &trans  &sys_reset
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                       &kp C_VOL_DN  &trans  &trans  &trans  &trans  &trans
&trans      &trans        &trans        &trans        &trans        &trans                             &trans        &trans  &trans  &trans  &trans  &bootloader
                                                      &trans        &trans        &mo FUN_L    &trans  &trans        &trans
            >;
        };

        // index: FUN_L (4)
        media_layer {
            display-name = "Media";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &kp C_PREV  &kp C_VOL_DN      &kp C_VOL_UP  &kp C_NEXT  &trans
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans      &trans            &trans        &trans      &trans
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans      &kp C_PLAY_PAUSE  &kp C_MUTE    &trans      &trans
                                &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };

        // index: MOU_L (5)
        mouse_layer {
            display-name = "Mouse";
            bindings = <
&kp PG_UP       &kp HOME        &kp END       &kp PG_DN        &kp CAPS      &kp ESC                          &kp LEFT_ARROW  &kp UP_ARROW    &kp DOWN_ARROW  &kp RIGHT_ARROW  &mkp LCLK  &mkp MCLK
&kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW  &kp ENTER     &kp TAB                          &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_UP    &mmv MOVE_RIGHT  &mkp RCLK  &kp PG_UP
&mkp LCLK       &mkp MCLK       &mkp RCLK     &kp C_VOL_UP     &kp C_VOL_DN  &kp C_MUTE                       &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP    &msc SCRL_RIGHT  &kp PG_DN  &trans
// Две позиции возврата: обе выполняют &to BASE_L.
                                              &to BASE_L       &to BASE_L    &trans    &mkp LCLK              &mkp RCLK       &mkp MCLK
            >;
        };

        // index: reserved (отключён)
        reserved_layer {
            status = "disabled";
            display-name = "Reserved";
            // Примечание: для временной активации при отладке установить status = "okay" и назначить &mo/&to на нужную позицию.
        };
    };
};
